<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/search_row_border_shape"
    android:layout_margin="@dimen/search_row_margin">

    <ImageView
        android:id="@+id/search_result_image"
        android:layout_width="@dimen/search_result_image_size"
        android:layout_height="@dimen/search_result_image_size"
        android:contentDescription="@string/search_image_description"
        android:paddingTop="@dimen/search_image_padding"
        android:adjustViewBounds="true"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/search_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/search_result_heading_text_size"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingTop="@dimen/search_image_padding" />

    <TextView
        android:id="@+id/search_result_snippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/search_result_text_size"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        android:paddingTop="@dimen/search_image_padding" />

</LinearLayout>
